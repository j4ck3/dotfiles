set $mod Mod1

font pango:JetBrainsMono Nerd Font, FontAwesome 8

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id xrandr --output DVI-D-0 --mode 1920x1080 --refresh 144
exec --no-startup-id dunst
exec_always --no-startup-id feh --bg-fill ~/dotfiles/wallpapers/purplesea.jpg
# exec --no-startup-id nvidia-settings --assign CurrentMetaMode="nvidia-auto-select +0+0 { ForceCompositionPipeline = On }"
exec --no-startup-id picom --config ~/.config/picom/picom.conf

floating_modifier $mod
tiling_drag modifier titlebar
bindsym $mod+Return exec ghostty
bindsym $mod+w kill
bindsym $mod+space exec --no-startup-id rofi -show combi --window-title "run"
bindsym $mod+Shift+space exec --no-startup-id prime-run rofi -show combi --window-title "prime-run"
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Define workspace names
set $ws1 "1:Web"
set $ws2 "2:Code"
set $ws3 "3:Music"
set $ws4 "4:Code"
set $ws5 "5:chatgpt"

assign [class="zen-browser"] $ws1
assign [class="discord"] $ws2
assign [class="Spotify"] $ws3
assign [class="code"] $ws4
assign [class="chatgpt"] $ws5

# Autostart them
exec --no-startup-id zen-browser
exec --startup-id=chatgpt zen-browser https://chatgpt.com
exec --no-startup-id discord
exec --no-startup-id spotify
exec --no-startup-id code

bindsym $mod+j workspace number $ws1
bindsym $mod+k workspace number $ws2
bindsym $mod+l workspace number $ws3
bindsym $mod+odiaeresis workspace number $ws4
bindsym $mod+h workspace $ws5; exec --startup-id=chatgpt zen-browser
bindsym $mod+u workspace 10; exec dolphin

# move focused container to workspace
bindsym $mod+Shift+j move container to workspace number $ws1
bindsym $mod+Shift+k move container to workspace number $ws2
bindsym $mod+Shift+l move container to workspace number $ws3
bindsym $mod+Shift+odiaeresis move container to workspace number $ws4
bindsym $mod+Shift+h move container to workspace number $ws5
bindsym $mod+Shift+u move container to workspace number $ws10

# CHANGE FOCUSED WINDOW
bindsym $mod+Up focus up
bindsym $mod+Down focus down
bindsym $mod+Left focus left
bindsym $mod+Right focus right

# MOVE FOCUSED WINDOW
#bindsym $mod+Shift+k move up
#bindsym $mod+Shift+j move down
#bindsym $mod+Shift+h move left
#bindsym $mod+Shift+l move right

# (noob alternative) move focused window
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
# bindsym $mod+e layout toggle split

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym l resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym h resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

mode "scrot" {
    bindsym s exec "scrot ~/Skrivbord/screenshot_%Y-%m-%d_%H-%M-%S.png" mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+z mode "scrot"

# window colors
client.focused #9b8d7f #9b8d7f #000000 #9b8d7f #9b8d7f
client.focused_inactive #222222 #222222 #9b8d7f #222222 #222222
client.unfocused #222222 #222222 #9b8d7f #222222 #222222

bar {
  status_command i3blocks -c ~/.config/i3/i3blocks
  position bottom
  separator_symbol " "
  colors {
    background #222222
    statusline #9b8d7f
    separator #9b8d7f

    focused_workspace #9b8d7f #9b8d7f #222222
    inactive_workspace #222222 #222222 #9b8d7f
    active_workspace #222222 #222222 #9b8d7f
    urgent_workspace #222222 #222222 #9b8d7f
    binding_mode #222222 #222222 #9b8d7f
  }
  font pango:Iosevka Term 12
  tray_output eDP
}

